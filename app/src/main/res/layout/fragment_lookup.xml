<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_dialog_padding_material">

    <TextView
        android:id="@+id/date_and_location"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"/>

    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date_and_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/description"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"/>

    <TextView
        android:id="@+id/prices_title"
        android:layout_below="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prices"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/prices"
        android:layout_below="@+id/prices_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ok"
        android:layout_below="@+id/prices"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:text="@android:string/ok"/>

</RelativeLayout>